// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Transcription {
  id                String   @id @default(cuid())
  assemblyAiId      String   @unique
  userEmail         String
  title             String?
  titleGenerating   Boolean  @default(true)
  fileName          String?
  language          String?
  duration          Float?
  wordCount         Int?
  preview           String?
  tags              String[] @default([])

  // NEW badge system
  isNew             Boolean  @default(true)
  viewedAt          DateTime?

  // Extracted metadata for smart titles
  companyNames      String[] @default([])
  personNames       String[] @default([])
  meetingType       String?  // interview, meeting, presentation, call, other

  assemblyCreatedAt DateTime? // Date from AssemblyAI when transcript was created
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([userEmail])
  @@index([userEmail, isNew])
  @@index([createdAt(sort: Desc)])
  @@map("transcriptions")
}
